# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=HouseScope
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///./data/housescope.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://user:password@localhost:5432/housescope

# Plaid API
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret-sandbox
PLAID_ENV=sandbox
# Options: sandbox, development, production
PLAID_COUNTRY_CODES=US
PLAID_PRODUCTS=transactions

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=True

# Web Scraping
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_RATE_LIMIT=2  # Requests per second
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT=10  # Seconds

# Default Mortgage Assumptions
DEFAULT_INTEREST_RATE=0.07  # 7%
DEFAULT_LOAN_TERM_YEARS=30
DEFAULT_PROPERTY_TAX_RATE=0.012  # 1.2% annually
DEFAULT_INSURANCE_RATE=0.005  # 0.5% annually
DEFAULT_PMI_RATE=0.005  # 0.5% if < 20% down

# Regional Settings
DEFAULT_REGION=Pittsburgh, PA
DEFAULT_STATE=PA

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/housescope.log
